<div style="width: 100%; margin-top: 0px; height: <%= height %>; border-style: solid; border-width: 0px 0px 1px 0px; border-color: #626e66;">

  <div class="inline-block" style="width: 35%; border-style: solid; border-width: 0px 1px 0px 0px; border-color: #94a699; height: 100%; float:left;">
    <div style="padding-top: 20px; padding-bottom: 20px; padding-right: 10px;">
      <p style="font-size: 20px;text-align: left; color: #FFFFFF;"><%= title %></p>
      <p>
        <%= description %>
        <% if more.present? && !more.empty? %>
            <a href="<%= more %>" style="margin-left: 15px; color: #d1eb70;">more</a>
        <% end %>
      </p>
    </div>
  </div>

  <div class="inline-block" style="width: 20%; border-style: solid; border-width: 0px 1px 0px 0px; border-color: #94a699; height: 100%; float:left;">
    <div class="center" style="margin-top: 17%;">
      <h1 style="font-size: 28px;"><%= basic ? '✓' : '' %></h1>
    </div>
  </div>

  <div class="inline-block" style="width: 20%; border-style: solid; border-width: 0px 1px 0px 0px; border-color: #94a699; height: 100%; float:left;">
    <div class="center" style="margin-top: 17%;">
      <h1 style="font-size: 28px;"><%= pro ? '✓' : '' %></h1>
    </div>
  </div>

  <div class="inline-block" style="width: 20%; border-style: solid; border-width: 0px 1px 0px 0px; border-color: #94a699; height: 100%; float:left;">
    <div class="center" style="margin-top: 17%;">
      <h1 style="font-size: 28px;"><%= enterprise ? '✓' : '' %></h1>
    </div>
  </div>
</div>