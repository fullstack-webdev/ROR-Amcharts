<%= render layout: 'performance/layout_performance' do %>
  <% cache("trends/programs/" + cache_key_for_programs) do %>
    <div class="section-header" style="margin-top: 15px;">
      <h1>Drilling Programs</h1>
    </div>

    <div class="block">
      <div class="inline-block">
        <%= render 'form' %>
      </div>

      <div class="inline-block" style="margin-left: 30px; vertical-align: top;">
        <%= render 'tray_btns' %>
      </div>
    </div>

    <div class="divider"></div>

    <div>
      <div class="remote-tray" data-tray="programs_well_time">
        <div class="remote-loading" style="margin-top: 30px;">
          <%= render 'layouts/inline_loading', title: "Please wait while loading..." %>
        </div>
      </div>

      <div class="remote-tray custom-data-closed" data-tray="programs_cost">
        <div class="remote-loading" style="margin-top: 30px;">
          <%= render 'layouts/inline_loading', title: "Please wait while loading..." %>
        </div>
      </div>

      <div class="remote-tray custom-data-closed" data-tray="programs_warnings">
        <div class="remote-loading" style="margin-top: 30px;">
          <%= render 'layouts/inline_loading', title: "Please wait while loading..." %>
        </div>
      </div>

      <div class="remote-tray custom-data-closed" data-tray="programs_operations">
        <div class="remote-loading" style="margin-top: 30px;">
          <%= render 'layouts/inline_loading', title: "Please wait while loading..." %>
        </div>
      </div>
    </div>

    <script type="text/javascript">
      <%= render 'index.js' %>
    </script>
  <% end %>
<% end %>