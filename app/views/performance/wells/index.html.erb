<%= render layout: 'performance/layout_performance' do %>
  <div class="section-header" style="margin-top: 15px;">
    <h1>Wells</h1>
  </div>

  <div class="block">
    <div class="inline-block">
      <%= render 'form' %>
    </div>

    <div class="inline-block" style="margin-left: 30px; vertical-align: top;">
      <%= render 'tray_btns' %>
    </div>
  </div>

  <div class="divider"></div>

  <div class="block">
    <ul class="performance_well_list selected"></ul>
  </div>

  <div class="divider"></div>

  <div>
    <div class="remote-tray" data-tray="wells_well_time">
      <div class="remote-loading" style="margin-top: 30px;">
        <%= render 'layouts/inline_loading', title: "Please wait while loading..." %>
      </div>
    </div>

    <div class="remote-tray custom-data-closed" data-tray="wells_cost">
      <div class="remote-loading" style="margin-top: 30px;">
        <%= render 'layouts/inline_loading', title: "Please wait while loading..." %>
      </div>
    </div>

    <div class="remote-tray custom-data-closed" data-tray="wells_warnings">
      <div class="remote-loading" style="margin-top: 30px;">
        <%= render 'layouts/inline_loading', title: "Please wait while loading..." %>
      </div>
    </div>

    <div class="remote-tray custom-data-closed" data-tray="wells_operations">
      <div class="remote-loading" style="margin-top: 30px;">
        <%= render 'layouts/inline_loading', title: "Please wait while loading..." %>
      </div>
    </div>
  </div>

  <script type="text/javascript">
    <%= render 'index.js' %>
  </script>
<% end %>