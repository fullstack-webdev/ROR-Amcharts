<div class="remote-tray" data-tray="warnings_overview">

  <div class="remote-loading hidden">
    <br><br>
    <%= render 'layouts/inline_loading', title: "Please wait, loading warnings overview..." %>
  </div>

  <div class='tray-content content-loaded'>

    <div class="section-header" style="margin-top: 15px;">
      <h1>Warnings Overview</h1>
    </div>

    <div class="invisible-lost-time">
      <div class="inline-block" style="width: 30%;">
        <p class="title" style="font-size: 20px; color: #9abeaa;">Last 4 hours</p>

        <p class="value">3</p>
      </div>

      <div class="inline-block" style="width: 30%;">
        <p class="title" style="font-size: 20px; color: #9abeaa;">Last 12 hours</p>

        <p class="value">4</p>
      </div>

      <div class="inline-block" style="width: 30%;">
        <p class="title" style="font-size: 20px; color: #9abeaa;">Total for Well</p>

        <p class="value">12</p>
      </div>
    </div>

    <div class="block warnings-overview">

      <div class="inline-block" style="width: 30%; vertical-align: top;">

        <ul class="list">
          <li>
            <div class="metrics">2:30pm 8,355ft</div>
