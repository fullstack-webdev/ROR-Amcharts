<% provide(:title, 'Reset Password') %>

<div class="">

  <div class="section-header">
    <h1>Reset Password</h1>

    <div class="pull-right">
      <script type="text/javascript" language="javascript">
          { coded = "aAbbYfx@iYfEv.vk"
              key = "WiKlrC5uSxHYjPpvgkqZf0OAdmTNw9bEUhF34L62z1BRQsJcVy8Me7DtGoXnIa"
              shift=coded.length
              link=""
              for (i=0; i<coded.length; i++) {
                  if (key.indexOf(coded.charAt(i))==-1) {
                      ltr = coded.charAt(i)
                      link += (ltr)
                  }
                  else {
                      ltr = (key.indexOf(coded.charAt(i))-shift+key.length) % key.length
                      link += (key.charAt(ltr))
                  }
              }
              document.write("<a class='btn btn-sub align-top' href='mailto:"+link+ '?subject=Help+Logging+In' +"'>Email Support</a>")
          }
      </script><noscript></noscript>
    </div>
  </div>


  <div class="form">
    <%= form_for :session, action: :forgot, remote: true do |f| %>

        <div class="">
          <div class="alert-box alert-info ">
            <b>To reset your password, please enter you email below.</b>

            <p class="">We will then send you an email with instructions on how to complete the change.</p>
          </div>

          <div class="" style="margin-top: 30px;">
            <h3 class="inline">Email Address</h3>
            <%= f.text_field :email, placeholder: "Type Email", value: params[:email],
                             class: "txtfield tooltip-info push-right-small",
                             "data-placement" => "bottom",
                             "data-title" => "Email address of the Corva account" %>
            <%= f.submit "Send Email", class: "btn btn-primary white-text tooltip-info form-loading-on-click",
                         style: "margin-top: -5px; margin-left: 15px;",
                         "data-placement" => "bottom",
                         "data-title" => "Send an email with a password reset" %>


            <div id="no_email" class="warning-text hidden">
              <%= image_tag "error_red.png" %> Could not find a user with that email, please try again.
            </div>
          </div>

        </div>

    <% end %>
  </div>

  <div id="email_sent" class="hidden">
    <hr>
    <br>
      Password reset instructions have been sent to <b><span id="email"></span></b>
    <br><br>
    <%= link_to "Login Now", root_path, class: "btn btn-primary" %>
  </div>
</div>