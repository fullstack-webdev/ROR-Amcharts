<div class="modal-popup modal-popup-fixed" style="width: 90%; padding: 0; border-radius: 0; margin-top: 155px; max-width: 925px; box-sizing: border-box;">
  <div style="padding: 24px; background: #da421a;">
    <h2 style="font-size: 20px;
        color: #ffffff;
        text-align: left;
        padding: 0;
        margin: 0;"><%= warning.name %></h2>
    <a href="#" class="modal-popup-close" id="close_warning_detail_popup" style="right: 24px;
        font-size: 20px;
        margin-top: 24px;
        position: absolute;
        top: 0;
        float: right;"><i class="fa fa-times"></i></a>
  </div>

  <div class="modal-content" style="overflow: auto; width: 100%; height: 100%; padding-bottom: 30px; box-sizing: border-box;">
    <div style="border-bottom: 1px solid #667474; line-height: 64px; font-size: 14px; padding: 0 24px; color: #ffffff;">
      <a href="javascript: void(0);" style = "background: #e7d034; color: #2d4040; padding: 8px 20px; margin-right: 20px;"><%= warning.level_name.upcase %></a> <%= warning.family_name %>
      <div style="float: right; font-family: orgonboldregular; margin-left: 24px;">
        <%= warning.duration %>
      </div>
      <div style="float: right; font-family: orgonboldregular; margin-left: 24px;">
        <%= warning.opened_at.strftime('%Y') == Date.today.strftime('%Y') ? '' : warning.opened_at.strftime('%Y') %>
        <%= warning.opened_at.strftime('%b %e %k:%M') %>
      </div>
      <div style="float: right; font-family: orgonlightregular; "><%= warning.depth_from.present? ? number_with_delimiter(number_with_precision(warning.depth_from, precision: 0)) : 0 %> ft</div>
    </div>
    <div style="margin-top: 28px; color: #ffffff; font-size: 14px; padding: 0 24px;">
      <h2 style="color: #58c9c2; font-size: 14px; margin-bottom: 14px; text-align: left;">Description</h2>
      <%= warning.description %>
    </div>
    <div style="margin-top: 28px; color: #ffffff; font-size: 14px; padding: 0 24px;">
      <h2 style="color: #58c9c2; font-size: 14px; margin-bottom: 14px; text-align: left;">Resolution</h2>
      <b><%= warning.resolution %></b>
    </div>
    <div style="margin-top: 28px; color: #ffffff; font-size: 14px; padding: 0 24px;">
      <h2 style="color: #58c9c2; font-size: 14px; margin-bottom: 14px; text-align: left;">Supporting Contact</h2>
      <%= warning.contact %>
    </div>

    <% if warning.deletable_by(current_user) %>
      <div style="margin-top: 28px; padding: 0 24px; text-align: center;">
        <%= link_to "Delete", event_warning_path(warning), method: :delete, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>