<div class="modal-popup modal-popup-fixed" style="min-height: 500px; max-height: 500px; overflow: hidden; width: 90%; padding: 0; border-radius: 0; margin-top: 90px; max-width: 1025px; box-sizing: border-box; z-index: 1032;">
  <div style="padding: 24px; background: #435f60;">
    <h2 style="font-size: 20px;
        font-family: orgonlightregular;
        color: #ffffff;
        text-align: left;
        padding: 0;
        margin: 0;"><%= @annotation.title || "Annotation" %></h2>
    <a href="#" class="modal-popup-close" id="close_config_detail_popup" style="right: 24px;
        font-size: 20px;
        margin-top: 24px;
        position: absolute;
        top: 0;
        float: right;"><i class="fa fa-times"></i></a>
  </div>

  <div class="modal-content" style="width: 100%; padding-bottom: 20px;  box-sizing: border-box;">

    <div style="border-bottom: 1px solid #667474; line-height: 64px; font-size: 14px; padding: 0 24px; color: #ffffff; background-color: #263334;">
      <div class="inline-block">
        <div class="inline-block align-top" style="margin-right: 10px;">Members</div>

        <div class="inline-block" style="margin-top: 10px;">
          <%= render 'users/user_icon2', user: current_user %>
        </div>
      </div>

      <div style="float: right;">
        <div class="inline-block align-top">
          <div class="inline-block align-top" style="margin-right: 10px;">Hole Depth
            <span style="font-family: orgonboldregular; margin-left: 10px;"><%= number_with_delimiter(@annotation.start_depth.round(0), :delimiter => ',') %></span>
          </div>
        </div>

        <div class="inline-block align-top" style="margin-left: 30px;">
          <div class="inline-block align-top" style="margin-right: 10px;">Time
            <span style="font-family: orgonboldregular; margin-left: 10px;"><%= @annotation.start_time.strftime("%m/%d/%Y %H:%M") %></span>
          </div>
        </div>
      </div>
    </div>


    <div class="comments-list" style="padding-bottom: 50px; box-sizing: border-box; position: relative;">
      <% comment_count = @annotation.annotation_comments.count %>
      <div id="annotation_comments" style="margin: 20px;">
        <% @annotation.annotation_comments.each_with_index do |comment, index| %>
          <%= render 'annotations/annotation_comment', comment: comment, last: index < comment_count - 1 %>
        <% end %>
      </div>


      <div id="new_annoation_comment_div" style="margin: 20px; margin-top: 40px; margin-left: 70px; margin-right: 50px; opacity: 0.5">
        <textarea id="annotation_comment" class="align-top" type="text" placeholder="Add Comment..." style="min-height: 35px; height: 35px; width: 98%; margin: 0; margin-top:0px; border-radius: 0; padding: 10px; font-family: orgonboldregular;  color: #000000;"/>

        <div style="float: right; margin-top: 20px;">
          <a id="add_annotation_comment_button" data-annotation-id="<%= @annotation.id %>" href="#" class="btn btn-primary">Add
            Comment</a>
        </div>
      </div>
    </div>


  </div>
</div>
</div>


<div style="position: fixed; margin-top: 55px; width: 100%; height: 100vh; z-index: 1031; left: 0; top: 0; right: 0; bottom: 0; background-color: #000000; opacity: 0.6;"></div>
