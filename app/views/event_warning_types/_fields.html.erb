<div>
  <div class='job-field-title'>ID</div>
  <div>
    <%= f.text_field :warning_id, placeholder: "Warning ID", class: "job-field-value-editable" %>
  </div>
</div>

<div class="divider"></div>

<div>
  <div class='job-field-title'>Name</div>
  <div>
    <%= f.text_field :name, placeholder: "Warning name", class: "job-field-value-editable" %>
  </div>
</div>

<div class="divider"></div>

<div>
  <div class='job-field-title'>Severity</div>
  <div>
    <%= f.select :severity, EventWarningType.severity.options, {}, class: "custom-select custom-select-ajax" %>
  </div>
</div>

<div class="divider"></div>

<div>
  <div class='job-field-title'>Category</div>
  <div>
    <%= f.select :category, EventWarningType.categories, {}, class: "custom-select custom-select-ajax", style: "margin: 0px;" %>
  </div>
</div>

<div class="divider"></div>

<div>
  <div class='job-field-title'>Description</div>
  <div>
    <%= f.text_area :description, class: "job-field-value-editable", style: "width: 400px; height: 50px; margin: 0px; resize: both;" %>
  </div>
</div>

<div class="divider"></div>

<div>
  <div class='job-field-title'>Resolution</div>
  <div>
    <%= f.text_area :resolution, class: "job-field-value-editable", style: "width: 400px; height: 50px; resize: both;" %>
  </div>
</div>