<div class="company-overview">
  <div class="section-header">
    <h1>Edit Warning</h1>

    <div class='inline-block align-top pull-right'>
      <%= link_to "Delete", @warning_type, method: :delete, class: "btn btn-sub tooltip-info align-top" %>
    </div>
  </div>

  <div class="form">
    <%= form_for(@warning_type) do |f| %>
      <%= render 'fields', f: f %>

      <div class="divider divider-md"></div>

      <%= f.submit "Save", class: "btn btn-primary tooltip-info push-right-small form-loading-on-click" %>
      <%= link_to button_tag("Cancel", class: "btn btn-sub push-left-small tooltip-info","data-title" => "Cancel edit and go back", :type => 'button'), event_warning_types_path %>
    <% end %>
  </div>
</div>